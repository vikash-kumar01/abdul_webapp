pipeline{
    
    agent any
    
    stages{
        
        stage('Git Checkout'){
            
            steps{
                
                script {
                    
                    git branch: 'devops', url: 'https://github.com/vikash-kumar01/abdul_webapp.git'
                }
            }
        }
        stage('UNIT Testing'){
            
            steps{
                
                script {
                    
                    sh 'mvn test'
                }
            }
        }
        stage('Integration Testing'){
            
            steps{
                
                script {
                    
                    sh 'mvn verify -DskipUnitTests'
                }
            }
        }
        stage('Static Code Analysis'){
            
            steps{
                
                script {
                    
                    withSonarQubeEnv(credentialsId: 'sonarqube-creds', installationName: 'sonar-server') {

                        sh 'mvn clean package sonar:sonar'
                    }
                }
            }
        }

    }
}